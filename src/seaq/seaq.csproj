  </ItemGroup>

  <ItemGroup>
  	<None Include="..\..\LICENSE.TXT">
  	  <Pack>True</Pack>
  	  <PackagePath></PackagePath>
  	</None>
	  <None Include="..\..\readme.md">
		  <Pack>True</Pack>
		  <PackagePath></PackagePath>
	  </None>
  </ItemGroup>
	
</Project>
